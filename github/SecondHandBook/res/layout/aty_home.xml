<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="vertical" 
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:drawableLeft="@drawable/book_category_icon"
                android:text="@string/hotbook_category"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp" >

                <Button
                    android:id="@+id/bn_wszk"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_wszk"
                    android:paddingTop="10dp"
                    android:text="文史哲科"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/bn_jzfs"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_jzfs"
                    android:paddingTop="10dp"
                    android:text="经政法社"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/bn_zrkx"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_zrkx"
                    android:paddingTop="10dp"
                    android:text="自然科学"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp" >

                <Button
                    android:id="@+id/bn_xdkj"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_xdkx"
                    android:text="现代科技"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/bn_ysgl"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_ysgl"
                    android:text="艺术管理"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/bn_qkzz"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_default_catagory"
                    android:drawableTop="@drawable/pic_bn_qkzz"
                    android:text="期刊杂志"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:background="@color/write"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/hotbookicon"
                    android:paddingTop="2dp"
                    android:text="@string/hotbook_title"
                    android:layout_gravity="center"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/tv_bookmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:layout_gravity="center"
                        android:text=">  "
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout2"
            android:background="@color/write" >

            <LinearLayout
                android:id="@+id/ll_hot"
                android:layout_width="92dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/iv_hotbook_big"
                    android:layout_width="92dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hotbook_big" />

            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:background="@color/divide" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/ll_hot"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_hotbook_small_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />

                    <ImageView
                        android:id="@+id/iv_hotbook_small_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />

                    <ImageView
                        android:id="@+id/iv_hotbook_small_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />
                </LinearLayout>

                <View
                    android:id="@+id/divide_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/divide"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_hotbook_small_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />

                    <ImageView
                        android:id="@+id/iv_hotbook_small_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />

                    <ImageView
                        android:id="@+id/iv_hotbook_small_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/hotbook_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>